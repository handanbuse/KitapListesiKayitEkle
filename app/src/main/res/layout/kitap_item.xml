<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/kitapitem_img">
        
    </ImageView>





    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/kitapitem_textviewadi"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Kitap Adı:"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/kitapitem_textviewyazari"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Kitap Yazarı:"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/kitapitem_textviewozeti"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Kitap Özeti :"
            android:layout_marginTop="3dp"
            android:maxLines="5"
            android:layout_height="wrap_content"></TextView>
        
        

     


    </LinearLayout>

</LinearLayout>